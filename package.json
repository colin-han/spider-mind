{
  "name": "spider-mind",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "lint": "next lint",
    "test:bdd": "tsx scripts/pre-test-setup.ts && TS_NODE_PROJECT=tsconfig.bdd.json cucumber-js --config cucumber.config.js",
    "test:bdd:watch": "TS_NODE_PROJECT=tsconfig.bdd.json cucumber-js --config cucumber.config.js 'bdd/features/**/*.feature' --watch",
    "test:all": "tsx scripts/pre-test-setup.ts && npm run test:bdd:raw 'bdd/features/**/*.feature'",
    "test:bdd:raw": "TS_NODE_PROJECT=tsconfig.bdd.json cucumber-js --config cucumber.config.js",
    "pre-test-setup": "tsx scripts/pre-test-setup.ts",
    "lint:check": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "node scripts/migrate-db.js",
    "db:test": "node scripts/test-db-connection.js",
    "cleanup-test-data": "tsx scripts/cleanup-test-data.ts",
    "pm2:dev": "node scripts/pm2-manager.js dev",
    "pm2:prod": "node scripts/pm2-manager.js prod",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/themes": "^3.2.1",
    "@xyflow/react": "^12.8.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/pretty-formatter": "^2.0.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
